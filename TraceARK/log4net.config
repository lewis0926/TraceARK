<?xml version="1.0" encoding="UTF-8"?>
<log4net>
  <root>
    <level value="ALL" />
    <!--appender-ref ref="LogFileAppender" /-->
    <appender-ref ref="AllFileAppender" />
    <appender-ref ref="ErrorFileAppender" />
  </root>
  
  <!--Detail-->
  <appender name="AllFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="D:\Development\logs\TraceARK\Detail.log" />
    <!--file value="D:\Programs\logs\TraceARK\Detail.log" /-->
    <appendToFile value="true" />

    <!-- Composite-->
    <rollingStyle value="Composite" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="100MB" />
    <datePattern value=".yyyyMMdd" />
    
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %level %logger - %message%newline" />
    </layout>
    
    <!--File Details/Layout Options-->
    <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG" />
    </filter>
  </appender>
  
  <!--Error-->
  <appender name="ErrorFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="D:\Development\logs\TraceARK\Error.log" />
    <!--file value="D:\Programs\logs\TraceARK\Error.log" /-->
    <appendToFile value="true" />

    <!-- Composite-->
    <rollingStyle value="Composite" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="100MB" />
    <datePattern value=".yyyyMMdd" />

    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %level %logger - %message%newline" />
    </layout>

    <!--File Details/Layout Options-->
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="ERROR" />
    </filter>
  </appender>
</log4net>